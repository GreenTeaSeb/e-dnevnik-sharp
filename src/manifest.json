{

    "manifest_version": 2,
    "name": "e-dnevnik ++",
    "version": "1.0",
  
    "description": "Better e-dnevnik +",
    

    "content_scripts": [
        {
            "matches": ["*://ocjene.skole.hr/*"],
            "js": ["./main.js"],
            "css": ["./css/sidebar.css","./css/courses.css"],
            "run_at": "document_start",
            "exclude_matches": [
                "*://ocjene.skole.hr/login"
            ]
        },
        {
            "matches": ["*://ocjene.skole.hr/login"],
            "js": ["./login.js"],
            "css": ["./css/login.css"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "./icons/icon.png",
        "./html/courses.html",
        "./html/mainpage.html",
        "./html/loading.html",
        "./html/grades.html"
    ]
  }